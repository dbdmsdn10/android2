<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="30sp"
    android:paddingRight="30sp"
    android:background="#E3E3E3"
    >

    <Spinner
        android:id="@+id/dayspinner"
        android:layout_width="match_parent"
        android:layout_height="30sp"

        android:backgroundTint="#ffffff"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/morningbar"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#A9FFFD"
            android:maxLines="1"
            android:text="000Kcal" />

        <TextView
            android:id="@+id/lunchbar"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#00B7FF"
            android:maxLines="1"
            android:text="000Kcal" />

        <TextView
            android:id="@+id/dinnerbar"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#FFB546"
            android:maxLines="1"
            android:text="000Kcal" />

        <TextView
            android:id="@+id/midnightbar"
            android:layout_width="0sp"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:maxLines="1"
            android:text="000Kcal"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/snackbar"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#FF8B8B"
            android:maxLines="1"
            android:text="000Kcal" />

        <TextView
            android:id="@+id/leftbar"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:maxLines="1"
            android:text="000Kcal"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pasttxtmoning"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:background="#A9FFFD"
            android:gravity="center"
            android:text="아침\n000kcal"
            android:onClick="mclick"/>

        <TextView
            android:id="@+id/pasttxtlunch"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:background="#00B7FF"
            android:gravity="center"
            android:text="점심\n000kcal"
            android:onClick="mclick"
            />

        <TextView
            android:id="@+id/pasttxtdinner"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:background="#FFB546"
            android:gravity="center"
            android:text="저녁\n000kcal"
            android:onClick="mclick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pasttxtmidnight"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:background="#000000"
            android:gravity="center"
            android:text="야식\n000kcal"
            android:textColor="#ffffff"
            android:onClick="mclick"/>

        <TextView
            android:id="@+id/pasttxtsnack"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:background="#FF8B8B"
            android:gravity="center"
            android:text="간식\n000kcal"
            android:onClick="mclick"/>

        <TextView
            android:id="@+id/pasttxtleft"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:gravity="center"
            android:background="#ffffff"
            android:text="남음\n000kcal" />
    </LinearLayout>

    <TextView
        android:id="@+id/excercise"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인용"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/excerciseview"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>