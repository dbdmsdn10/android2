<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10sp">

    <TextView
        android:id="@+id/doname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동이름"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtstopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="00 h: 00 m: 00 s: 00 ms"
        android:textSize="35sp" />
    <TextView
        android:id="@+id/txtkcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="0kcal"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stopwatchstart"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:text="시작"
            android:textSize="20sp"
            android:onClick="mclick"
            />

        <Button
            android:id="@+id/stopwatchpause"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:text="일시정지"
            android:textSize="20sp"
            android:onClick="mclick"/>

        <Button
            android:id="@+id/stopwatchstop"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="정지"
            android:textSize="20sp"
            android:onClick="mclick"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/metlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp" />


</LinearLayout>